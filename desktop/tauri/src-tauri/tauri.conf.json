{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "",
        "devPath": "http://localhost:5173",
        "distDir": "../dist"
    },
    "package": {
        "productName": "BioDockify - Pharma Research AI",
        "version": "2.16.8"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "window": {
                "all": false,
                "close": true,
                "hide": true,
                "show": true,
                "maximize": true,
                "minimize": true,
                "unmaximize": true,
                "unminimize": true,
                "startDragging": true,
                "setResizable": true,
                "setTitle": true,
                "setSize": true,
                "setMinSize": true,
                "setMaxSize": true,
                "setPosition": true,
                "setFullscreen": true,
                "setFocus": true,
                "setIcon": true,
                "setSkipTaskbar": true,
                "setDecorations": true,
                "setAlwaysOnTop": true,
                "center": true,
                "requestUserAttention": true
            },
            "dialog": {
                "all": false,
                "open": true,
                "save": true
            },
            "http": {
                "all": true,
                "request": true,
                "scope": [
                    "http://**",
                    "https://**"
                ]
            },
            "shell": {
                "all": false,
                "open": true,
                "sidecar": true,
                "execute": true,
                "scope": [
                    {
                        "name": "biodockify-engine",
                        "sidecar": true
                    },
                    {
                        "name": "explorer",
                        "cmd": "explorer",
                        "args": true
                    },
                    {
                        "name": "curl",
                        "cmd": "curl",
                        "args": true
                    }
                ]
            }
        },
        "bundle": {
            "active": true,
            "targets": [
                "nsis",
                "msi"
            ],
            "externalBin": [
                "biodockify-engine"
            ],
            "identifier": "com.biodockify.app",
            "icon": [
                "icons/icon.ico",
                "icons/icon.png"
            ]
        },
        "systemTray": {
            "iconPath": "icons/icon.ico",
            "iconAsTemplate": true,
            "title": "BioDockify - Pharma Research AI"
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "BioDockify - Pharma Research AI",
                "width": 1200,
                "height": 800,
                "decorations": false
            }
        ]
    }
}